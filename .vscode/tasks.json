{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc générer le fichier actif",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // "${file}",
                "*.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                // "push_swap",
                "-lm",
                "-I",
                ".",
                "-I",
                "./Libft",
                "-L",
                "./Libft",
                "-lft",
                // "-Wall", "-Wextra", "-Werror"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        }
    ],
    "version": "2.0.0"
}
